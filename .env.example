# Environment Configuration
NODE_ENV=development
PORT=3000

# X (Twitter) API Configuration
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# X (Twitter) OAuth Configuration for User Authentication
TWITTER_CONSUMER_KEY=your_twitter_consumer_key_here
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret_here
TWITTER_CALLBACK_URL=http://localhost:3000/auth/twitter/callback

# AI Configuration (Choose one)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_PATH=./data/xnom.db

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Engagement Settings
AUTO_ENGAGEMENT_ENABLED=true
HIGH_ENGAGEMENT_THRESHOLD=100
ENGAGEMENT_DELAY_MS=2000
MAX_LIKES_PER_HOUR=50

# Notification Settings
CHECK_NOTIFICATIONS_INTERVAL=30000
WEBSOCKET_PORT=3001
